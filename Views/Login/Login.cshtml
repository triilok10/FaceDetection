@model FaceDetection.Models.EmployeeUser
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="container-fluid">
    <div class="row vh-100">
        <!-- Left Side: Dummy Image (visible on medium and larger screens) -->
        <div class="col-md-6 d-none d-md-flex align-items-center justify-content-center bg-light">
            <img src="https://via.placeholder.com/500" alt="Login Image" class="img-fluid" />
        </div>

        <!-- Right Side: Login Form -->
        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center bg-white">
            <div class="login-form shadow-lg p-4 w-100" style="max-width: 400px;">
                <h1 class="h3 mb-3 font-weight-normal text-center text-dark">Please sign in</h1>
                <form asp-controller="Login" asp-action="Login" method="post">
                    <div class="form-group mb-3">
                        <label for="username">Username</label>
                        <input asp-for="EmployeeCode" type="text" id="username" class="form-control" placeholder="Enter your username" required autofocus />
                    </div>

                    <div class="form-group mb-3">
                        <label for="password">Password</label>
                        <input asp-for="Password" type="password" id="password" class="form-control" placeholder="Enter your password" required />
                    </div>

                    <div class="form-group d-flex justify-content-between align-items-center mb-3">
                        <!-- Forgot Password link -->
                        <a href="#" class="text-muted">Forgot Password?</a>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block mb-3">Sign in</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        margin: 0;
        font-family: 'Arial', sans-serif;
    }

    .container-fluid {
        height: 100%;
    }

    .login-form {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

    h1 {
        color: #343a40;
    }

    label {
        font-weight: bold;
        color: #343a40;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .form-group label {
        font-size: 1rem;
    }

 
    @@media (max-width: 768px) {
        .col-md-6

    {
        padding: 0;
    }

    .bg-light {
        display: none; 
    }

    .login-form {
        padding: 20px;
        width: 90%;
        margin: auto;
        box-shadow: none;
    }

    .col-12.col-md-6 {
        width: 100%;
    }

    }

    @@media (min-width: 768px) {
        .bg-light

    {
        display: block; 
    }

    }
</style>
