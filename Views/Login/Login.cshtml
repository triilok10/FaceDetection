@model FaceDetection.Models.EmployeeUser;
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="text-center">
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <form asp-controller="Login" asp-action="Login" method="post">
            <div class="form-group">
                <label for="username">Username</label>
                <input asp-for="EmployeeCode" type="text" id="username" class="form-control" placeholder="Enter your username" required autofocus />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input asp-for="Password" type="password" id="password" class="form-control" placeholder="Enter your password" required />
            </div>



            <button type="submit" class="btn btn-primary btn-block">Sign in</button>
        </form>


    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        margin-top: 100px;
    }
</style>
