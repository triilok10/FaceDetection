@{
    ViewData["Title"] = "College Information";
}

<style>
    h2.bg-primary {
        font-size: 24px;
        font-weight: bold;
        border-radius: 5px;
    }

    .table th, .table td {
        text-align: center;
    }

        .table td a {
            margin: 0 5px;
        }

    input.form-control {
        margin-bottom: 10px;
    }

    #searchButton {
        width: 100px; 
    }

</style>


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            
            <div class="p-4 bg-light rounded shadow">
                <h3 class="text-center mb-3">Search College</h3>

                
                <div class="row mb-3">
                    
                    <div class="col-md-6">
                        <input type="text" id="collegeCodeSearch" class="form-control" placeholder="Enter College Code" />
                    </div>

                    
                    <div class="col-md-6">
                        <input type="text" id="collegeNameSearch" class="form-control" placeholder="Enter College Name" />
                    </div>
                </div>

               
                <div class="row">
                    <div class="col-md-12 text-end">
                       
                        <button id="searchButton" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

