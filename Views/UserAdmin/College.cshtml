@model FaceDetection.Models.CollegeDetails;
<style>
    /* Custom CSS */
    .mandatory::after {
        content: "*";
        color: red;
        margin-left: 5px;
    }

    .form-container {
        background-color: #f2f2f2;
        padding: 20px;
        border-radius: 5px;
        margin-top: 20px;
    }

    .status-label {
        margin-right: 10px;
    }

    .close-btn {
        float: right;
        margin-top: -10px;
    }
</style>


<div class="container form-container" id="displanyAddCollege">
    <div class="d-flex justify-content-between align-items-center">
        <h2>College Registration Form</h2>
        <button type="button" class="btn-close close-btn" aria-label="Close" onclick="js_CloseAddCollege()"></button>
    </div>

    <form asp-controller="UserAdmin" asp-action="CollegeAdd" method="post" onsubmit="return js_ValidateCollegeDetails();">
        <div class="mb-3 row">
            <label asp-for="CollegeName" class="col-sm-4 col-form-label mandatory">Name</label>
            <div class="col-sm-8">
                <input asp-for="CollegeName" type="text" class="form-control" id="CollegeName" required>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="CollegeCity" class="col-sm-4 col-form-label mandatory">City/Location</label>
            <div class="col-sm-8">
                <input asp-for="CollegeCity" type="text" class="form-control" id="CollegeCity" required>
            </div>
        </div>

        <!-- College State Dropdown -->
        <div class="mb-3 row">
            <label asp-for="CollegeState" class="col-sm-4 col-form-label mandatory">State</label>
            <div class="col-sm-8">
                <select class="form-select" id="CollegeState" asp-for="CollegeState" required>
                    <option value="" disabled selected>Select State</option>
                    <option value="state1">State 1</option>
                    <option value="state2">State 2</option>
                    <option value="state3">State 3</option>
                </select>
            </div>
        </div>

        <!-- College Country Dropdown -->
        <div class="mb-3 row">
            <label asp-for="CollegeCountry" class="col-sm-4 col-form-label mandatory">Country</label>
            <div class="col-sm-8">
                <select class="form-select" id="CollegeCountry" asp-for="CollegeCountry" required>
                    <option value="" disabled selected>Select Country</option>
                    <option value="country1">Country 1</option>
                    <option value="country2">Country 2</option>
                    <option value="country3">Country 3</option>
                </select>
            </div>
        </div>
        <!-- College PinCode -->
        <div class="mb-3 row">
            <label asp-for="CollegePinCode" class="col-sm-4 col-form-label mandatory">Pin Code</label>
            <div class="col-sm-8">
                <input asp-for="CollegePinCode" type="text" class="form-control" id="CollegePinCode" required>
            </div>
        </div>

        <!-- College Admin Name -->
        <div class="mb-3 row">
            <label asp-for="CollegeAdmin" class="col-sm-4 col-form-label mandatory">Admin/Incharger Name</label>
            <div class="col-sm-8">
                <input asp-for="CollegeAdmin" type="text" class="form-control" id="CollegeAdmin" required>
            </div>
        </div>

        <!-- College Email -->
        <div class="mb-3 row">
            <label asp-for="CollegeMail" class="col-sm-4 col-form-label mandatory">Offical Email</label>
            <div class="col-sm-8">
                <input asp-for="CollegeMail" type="email" class="form-control" id="CollegeMail" required>
            </div>
        </div>

        <!-- College Phone Number -->
        <div class="mb-3 row">
            <label asp-for="CollegePhone" class="col-sm-4 col-form-label mandatory">Official Phone Number</label>
            <div class="col-sm-8">
                <input asp-for="CollegePhone" type='tel' class='form-control' id='CollegePhone' required pattern='[0-9]{10}'>
                <small>Format: 1234567890</small>
            </div>
        </div>

        <!-- College Website -->
        <div class='mb-3 row'>
            <label asp-for="CollegeWebsite" class='col-sm-4 col-form-label mandatory'>College Website</label>
            <div class='col-sm-8'>
                <input asp-for="CollegeWebsite" type='url' class='form-control' id='CollegeWebsite' required placeholder='https://example.com'>
            </div>
        </div>

        <!-- College Status Field -->
        <fieldset class='mb-3 row'>
            <label asp-for="IsCollegeActive" class='col-sm-4 col-form-label mandatory'>Status</label>
            <div class='col-sm-8'>
                <input asp-for="IsCollegeActive" type='checkbox' id='IsCollegeActive' value='' checked class="me-2" />
            </div>
        </fieldset>

        <!-- Submit Button -->
        <button type='submit' class='btn btn-primary'>Submit</button>
    </form>
</div>



<script type="text/javascript">

    function js_ValidateCollegeDetails()

    {

        var collegeName= $("#CollegeName").val();
        var collegeCity= $("#CollegeCity").val();
        var collegeState= $("#CollegeState").val();
        var collegeCountry= $("#CollegeCountry").val();
        var collegePinCode= $("#CollegePinCode").val();
        var collegeAdmin= $("#CollegeAdmin").val();
        var collegeMail= $("#CollegeMail").val();
        var collegePhone= $("#CollegePhone").val();
        var collegeWebsite= $("#CollegeWebsite").val();
        var collegeStatus= $("#IsCollegeActive").is(":checked");

        //College Name
        if(!collegeName){
            $("#CollegeName").addClass("border-danger");
            toastr.error("Please enter the College Name");
            return false;
        }
        else{
             $("#CollegeName").removeClass("border-danger");
        }


        //College Location City
        if(!collegeCity){
            $("#CollegeCity").addClass("border-danger");
            toastr.error("Please enter the College City");
            return false;
        }
        else{
             $("#CollegeCity").removeClass("border-danger");
        }

        //College State
        if(!collegeState){
            $("#CollegeState").addClass("border-danger");
            toastr.error("Please select the State");
            return false;
        }
        else{
             $("#CollegeState").removeClass("border-danger");
        }


        //College Country
        if(!collegeCountry){
            $("#CollegeCountry").addClass("border-danger");
            toastr.error("Please enter the College Country");
            return false;
        }
        else{
             $("#CollegeCountry").removeClass("border-danger");
        }

        //College PinCode
           if(!collegePinCode){
            $("#CollegePinCode").addClass("border-danger");
            toastr.error("Please enter the College Country");
            return false;
        }
        else{
             $("#CollegePinCode").removeClass("border-danger");
        }

        //College Admin
        if(!collegeAdmin){
            $("#CollegeAdmin").addClass("border-danger");
            toastr.error("Please enter the College Admin");
            return false;
        }
        else{
             $("#CollegeAdmin").removeClass("border-danger");
        }

        //College Mail
        if(!collegeMail){
            $("#CollegeMail").addClass("border-danger");
            toastr.error("Please enter the College Mail");
            return false;
        }
        else{
             $("#CollegeMail").removeClass("border-danger");
        }


        //College Phone
        if(!collegePhone){
            $("#CollegePhone").addClass("border-danger");
            toastr.error("Please enter the College Phone");
            return false;
        }
        else{
             $("#CollegePhone").removeClass("border-danger");
        }

        //College Website
        if(!collegeWebsite){
            $("#CollegeWebsite").addClass("border-danger");
            toastr.error("Please enter the CollegeWebsite");
            return false;
        }
        else{
             $("#CollegeWebsite").removeClass("border-danger");
        }

        //College Status
        if(!collegeStatus){
            $("#IsCollegeActive").addClass("border-danger");
            toastr.error("Please enter the college Phone");
            return false;
        }
        else{
             $("#IsCollegeActive").removeClass("border-danger");
        }

    }


</script>